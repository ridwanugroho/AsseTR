@{
    ViewData["Title"] = "Update User";
    var u = ViewData["update"] as User;

    Layout = "_AdminLayout";

}


<form class="w-25" asp-action="SubmitUpdate" asp-controller="Administrator" method="post">
    <input name="id" value="@u.Id" hidden />
    <div class="form-group">
        <label for="fullname">Name</label>
        <input value="@u.FullName" type="text" class="form-control" name="fullname" id="fullname" placeholder="Name" required>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input value="@u.Email" type="email" class="form-control" name="email" id="email" placeholder="Email" required>
    </div>

    <div class="form-group">
        <label for="phone">Phone</label>
        <input value="@u.Phone" type="number" class="form-control" name="phone" id="phone" placeholder="Phone" required>
    </div>

    <div class="form-group">
        <label for="country">Country</label>
        <input value="@u.Address.Country" type="text" class="form-control" name="country" id="country" placeholder="country" required>
    </div>
    <div class="form-group">
        <label for="province">Province</label>
        <input value="@u.Address.Province" type="text" class="form-control" name="province" id="province" placeholder="province" required>
    </div>
    <div class="form-group">
        <label for="city">City</label>
        <input value="@u.Address.City" type="text" class="form-control" name="city" id="city" placeholder="city" required>
    </div>
    <div class="form-group">
        <label for="distric">Distric</label>
        <input value="@u.Address.Distric" type="text" class="form-control" name="distric" id="distric" placeholder="distric" required>
    </div>
    <div class="form-group">
        <label for="subdistric">Sub Distric</label>
        <input value="@u.Address.SubDistric" type="text" class="form-control" name="subdistric" id="subdistric" placeholder="subdistric" required>
    </div>
    <div class="form-group">
        <label for="street">Street</label>
        <input value="@u.Address.Street" type="text" class="form-control" name="street" id="street" placeholder="street" required>
    </div>


    <div>
        <label class="radio-inline"><input type="radio" name="role" value="3" checked>Operator</label>
        <label class="radio-inline"><input type="radio" name="role" value="2">Manager</label>
        <label class="radio-inline"><input type="radio" name="role" value="1">Administrator</label>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

